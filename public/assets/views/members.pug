doctype html
html
    head
        title Member Bookmarks
        style
            include style.css
        link(href="https://fonts.googleapis.com/css2?family=Monoton&family=Montserrat&display=swap" rel="stylesheet")
        //- link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css')
    body
        //- header section, includes title + nav
        .header
            h1 Web Organizer
                ul
                    li
                        a.home-link(href='#') home
                    li
                        a.profile-link(href='#') profile
                    li
                        a.logout-link(href='#') logout

        //- search + add new category 
        .categorySearch-div
            //-button to search through categories
            button(type="button" class="categoryDropdown button" id="categoryDropdown") Select Category
                ul#dropdown
                    li category1
                    li category2
                    li category3

            //-button to add category
            button(type="button" class="addCategoryBtn button" data-modal-target="#modal") &#10133; Add Category
            .modal(id='modal') 
                .modal-header
                    .title Add Category
                    button.close-button(data-close-button) &times;
                .modal-body 
                    form(action='submit' class='create-form')
                        label(for='category-input') Enter new category name:
                        input(type='text' id='category-input')

                        input(id="add-Category" type="submit" value="submit" class="submit-button")
            #overlay

            //-button to add Bookmark
            button(type="button" class="addBookmark button" data-modal-target="#bookmarkModal") &#10133; Add Bookmark
            .modal(id='bookmarkModal') 
                .modal-header
                    .title Add Bookmark
                    button.close-button(data-close-button) &times;
                .modal-body 
                    form(action='submit' class='create-form')
                        label(for='bookmark-input') Enter Category:
                        input(type='text' id='bookmark-category')

                        label(for='bookmark-input') Enter Keywords:
                        input(type='text' id='bookmark-keywords')

                        label(for='bookmark-input') Enter URL:
                        input(type='text' id='bookmark-url')
                            
                        input(id="add-bookmark" type="submit" value="submit" class="submit-button")
            #overlay

        //- categories will display here
        .category-view
            .category-div
                h3 category 1
                .bookmark-div
                    h4 title
                    p this is where the link will go
                    p this is where the tags will go
        
        //- footer 
        .footer 
            h4 &copy; Clever Foxes

        //- links to javascript files & jquery
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='/assets/js/modals.js')
        script(src='/assets/js/displayCategory.js')
        script(src='/assets/js/dropdown.js')


